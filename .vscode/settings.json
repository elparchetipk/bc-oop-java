{
  // Editor: Solo una pestaña visible y cierre automático de editores inactivos
  "workbench.editor.showTabs": "single",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 3,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.enablePreview": true,
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "workbench.editor.revealIfOpen": true,
  
  // Tema y colores personalizados
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#fefb2d",
    "activityBar.background": "#fefb2d",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#01bebc",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#15202b99",
    "sash.hoverBorder": "#fefb2d",
    "statusBar.background": "#f7f301",
    "statusBar.foreground": "#15202b",
    "statusBarItem.hoverBackground": "#c4c101",
    "statusBarItem.remoteBackground": "#f7f301",
    "statusBarItem.remoteForeground": "#15202b",
    "titleBar.activeBackground": "#f7f301",
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveBackground": "#f7f30199",
    "titleBar.inactiveForeground": "#15202b99"
  },
  "peacock.color": "#f7f301"
}
